<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainFragment">

    <LinearLayout
        android:id="@+id/main_head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/primary_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_fragment_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_wb_sunny_24"/>
            <TextView
                android:id="@+id/main_fragment_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1 \u2103"
                style="@style/TextAppearance.MaterialComponents.Headline2"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/primary_padding"/>
        </LinearLayout>

        <TextView
            android:id="@+id/main_fragment_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОБЛАЧНО"
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/primary_padding"/>

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_head_layout"
        android:layout_marginTop="@dimen/primary_padding"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>